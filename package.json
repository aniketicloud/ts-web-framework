{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently npm:start:*",
    "start:frontend": "vite --open",
    "start:backend": "json-server -w data/db.json",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^0.29.1",
    "@vitest/ui": "^0.29.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.29.1"
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "json-server": "^0.17.2"
  }
}
